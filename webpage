<body>
    <div class="container">
        <h1>Welcome to My Webpage</h1>
        <p>Hello! Please enter your message below:</p>
        <form onsubmit="showMessage(event)">
            <input type="text" id="userMessage" placeholder="Type your message..." required>
            <br>
            <button type="submit">Send Message</button>
        </form>
        <p id="displayMessage" style="margin-top:20px; font-weight:bold;"></p>
    </div>

    <script>
        function showMessage(event) {
            event.preventDefault(); // prevent page refresh
            const message = document.getElementById('userMessage').value;
            document.getElementById('displayMessage').innerText = "You sent: " + message;
            document.getElementById('userMessage').value = ""; // clear input
        }
    </script>
